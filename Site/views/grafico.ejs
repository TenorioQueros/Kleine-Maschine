<script>	

	
	function iniciar() {
		carregarDadosGrafico();
	//	setInterval(carregarMedias, 5000);
	}

	var chart;
	
	google.charts.load('current', {'packages': ['line']});

	var materialOptions = {
		chart: {
			title: 'Transações'
		},
		width: 600,
		height: 600,
		series: {
			0: {
				axis: 'aceitas',
				color: '#DF01A5'
			},
			1: {
				axis: 'timeouts',
				color: '#3104B4'
			}[
				2: {
				axis: 'total,
				color: '#3104B4'
			}
		},
		axes: {
			y: {
				aceitas: {
					label: 'Total'
				},
				timeouts: {
					label: 'Aceitas'
				},
					total: {
					label: 'Time-Out'
				},
			}
		}
	};

	google.charts.setOnLoadCallback(() => {
		chart = new google.charts.Line(document.getElementById('div_grafico'));
		carregarDadosGrafico();
		setInterval(carregarDadosGrafico, 5000);
	});



	function drawChart(data) {
		chart.draw(data, materialOptions);
	}

	function carregarDadosGrafico() {
		$.ajax({
			cache: false,
			method: "get",
			url: "/leituraGraficos/ultimas",
			success: function (data) {
				var dataTable = new google.visualization.DataTable(data);
				drawChart(dataTable);
			},
			error: function (e) {
				console.log("Erro:", e);
			}
		});
	}
	
	
  </script>
